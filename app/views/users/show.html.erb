<div class="row user_profile">
  <div class="col-md-8 mx-auto">
    <div class="col-md-8 mx-auto" style="font-size: 25px; margin-top: 30px; margin-bottom: 30px">
      <span><%= @user.username %></span>
    </div>
    <div class="user_info col-md-8 mx-auto">
      <%= render 'user_info' %>
    </div>

    <% if @user.bookmarks.any? %>
      <div class="user_bookmarks" style="clear:both; margin-top: 50px;">
        <h4>Bookmarks (<%= @user.bookmarks.count %>)</h4>
        <div class="row" style="margin-top: 20px">
          <% for @bookmark in @shoe_bookmarks %>
            <%= render 'bookmarks/bookmark', object: @bookmark %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @user.reviews.any? %>
      <div class="user_reviews" style="clear:both; margin-top: 20px">
        <h4>Reviews (<%= @user.reviews.count %>)</h4>
        <ol class="reviews">
          <% for @review in @user_reviews %>
            <%= render 'users/user_reviews', object: @review %>
          <% end %>
        </ol>
        <!--      = will_paginate @user_reviews %> -->
      </div>
    <% end %>
  </div>
</div>
