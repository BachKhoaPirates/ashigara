<%= link_to shoe_path(shoe) do %>
  <th>
    <div class="custom-card">
      <img class="img-fluid" style="width: 235px; height: 170px;" src=<%= shoe.shoe_images.first.image %>>
    </div>
    
    <div style="margin-top: 15px; color: black; font-size: 20px;">
        <%= link_to shoe.name, shoe_path(shoe), :style => "color: black" %>
    </div>
    <div style="margin-top: 4px; font-size: 15px"><%= shoe.brand.name %></div>
    <div style="margin-top: 4px; font-size: 15px"><%= shoe.category.name %></div>
    <div style="margin-top: 4px; font-size: 15px; color: #159588"><%= shoe.money_worthy %></div>
  </th>
  <th></th>
<% end %>
