<%= form_for [@shoe, @shoe.reviews.new] do |f| %>
  <div class='row'>
    <div class='col-6'>
      
      <div class="row">
        <div class='col-4'>
          Durability: 
        </div>
        <div id="durability"></div>
      </div>
      <div class="row" style='margin-top:15px'>
        <div class='col-4'>
          Comfortability: 
        </div>
        <div id="comfortability"></div>
      </div>
      <div class="row" style='margin-top:15px'>
        <div class='col-4'>
          Ventilation:
        </div>
        <div id="ventilation"></div>
      </div>
      <div class="row" style='margin-top:15px'>
        <div class='col-4'>
          Money worthy:
        </div>
        <div id="money_worthy"></div>
      </div>
    </div>
    
    <div class='col-6'>
      <%= f.text_field :content, placeholder: 'Content', class: 'form-control' %>
    </div>

  </div>
  <%= f.hidden_field :shoe_id, value: @shoe.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary pull-right"%>
  </div>
<% end %>

<script>
  $('#durability').raty({
    path: '/assets',
    scoreName: 'review[durability]',
    score: 1
  });
</script>

<script>
  $('#comfortability').raty({
    path: '/assets',
    scoreName: 'review[comfortability]',
    score: 1
  });
</script>


<script>
  $('#ventilation').raty({
    path: '/assets',
    scoreName: 'review[ventilation]',
    score: 1
  });
</script>

<script>
  $('#money_worthy').raty({
    path: '/assets',
    scoreName: 'review[money_worthy]',
    score: 1
  });
</script>

