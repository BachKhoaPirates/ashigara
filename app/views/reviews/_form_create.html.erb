<%= form_for [@shoe, @shoe.reviews.new] do |f| %>
  <div id="durability">Durability: </div>
  <div id="comfortability">Comfortability: </div>
  <div id="ventilation">Ventilation: </div>
  <div id="money_worthy">Money_worthy: </div>

  <%= f.text_field :content %>
  <%= f.hidden_field :shoe_id, value: @shoe.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  $('#durability').raty({
    path: '/assets',
    scoreName: 'review[durability]',
    score: 1
  });
</script>

<script>
  $('#comfortability').raty({
    path: '/assets',
    scoreName: 'review[comfortability]',
    score: 1
  });
</script>


