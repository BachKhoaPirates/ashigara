<div class="container login">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2>Log in</h2>
          <hr class="colorgraph">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email Address" %>
            </div>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
            </div>
            <hr class="colorgraph">
            <div class="row">
              <div class="col-md-3">
                <div class="btn btn-link">
                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>
                </div>
              </div>
              <div class="col-md-3 col-md-offset-3 pull-right">
                <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-12 text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
