<div class="container">
  <div class="row">
    <div class="" style="font-size: 30px; margin-top: 50px; width: 100%; text-align: center">
      Update <%= resource_name.to_s.humanize %> Profile
    </div>
  </div>
  <div class="row" style="margin-top: 50px">
    <div class="col-3"></div>
    <div class="col-2">
      <div>
        <%= link_to gravatar_for(@user, size: 150), @user %>
      </div>
      <button type="button" class="waves-effect waves-light btn" style="width: 150px; margin-top: 50px; background: #009688; font-size: 15px; border-radius: 50px; box-shadow: 0 4px 7px 0 rgba(0, 0, 0, 0.2), 0 5px 15px 0 rgba(0, 0, 0, 0.2); color: white;">Change avatar</button>
    </div>
    <div class="col-1"></div>
    <div class="col-6">
      <div style="float: left">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
          html: { method: :put }) do |f| %>
          <%= render "shared/devisemes" %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div style="margin-top: 8px">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field" style="margin-top: 15px;">
            <%= f.text_field :username, class: "form-control", placeholder: "User Name" %>
          </div>

          <div class="field" style="margin-top: 15px;">
            <%= f.number_field :foot_length, class: "form-control", placeholder: "Foot Length" %>
          </div>

          <div class="field" style="margin-top: 15px;">
            <%= f.number_field :foot_width, class: "form-control", placeholder: "Foot Width" %>
          </div>

          <div class="field" style="margin-top: 15px;">
            <%= f.date_field :dob, class: "form-control", placeholder: "Date Of Birth" %>
          </div>

          <div class="field" style="margin-top: 15px;">
            <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "New Password" %>
            <% if @minimum_password_length %>
              <em style="color: red"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field" style="margin-top: 15px;">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation" %>
          </div>

          <div class="field" style="margin-top: 15px;">
            <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Current Password" %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: "waves-effect waves-light btn", style: "background: #009688; color: white; width: 100%; font-size: 13px; border-radius: 50px; box-shadow: 0 4px 7px 0 rgba(0, 0, 0, 0.2), 0 5px 15px 0 rgba(0, 0, 0, 0.2); margin-top: 30px" %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- <= link_to "Back", :back %> -->
  </div>
  <div class="row" style="margin-top: 20px;">
    <div class="col-7" ></div>
    <p style="margin-top: 7px">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, style: "margin-left: 10px", class: "waves-effect waves-light btn" %></p>
  </div>
  <div style="height: 70px"></div>
</div>
